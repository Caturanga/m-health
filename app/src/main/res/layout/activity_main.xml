<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeatas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mhealth">

                <LinearLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/ic_account_box_black_24dp">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/opensansregular"
                            android:id="@+id/textview1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome to mHealth"
                            android:textColor="#ffffffff">


                        </TextView>

                        <TextView
                            android:fontFamily="@font/opensansregular"
                            android:id="@+id/textview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Catur Biantoro"
                            android:textColor="#ffffffff">

                        </TextView>

                        <TextView
                            android:fontFamily="@font/opensansregular"
                            android:id="@+id/textview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIK :123456789"
                            android:textColor="#ffffffff">

                        </TextView>

                    </LinearLayout>


                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/ic_credit_card_black_24dp">

                    </ImageView>

                    <TextView
                        android:fontFamily="@font/opensansregular"
                        android:id="@+id/textview4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nama \n Puskesmas"
                        android:textAlignment="center"
                        android:textColor="#ffffffff">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/opensanssemibold"
                            android:textAlignment="center"
                            android:text="1.300"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:fontFamily="@font/opensanssemibold"
                            android:textAlignment="center"
                            android:text="Individu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/opensansbold"
                            android:textAlignment="center"
                            android:text="Waiting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/opensanssemibold"
                                android:textAlignment="center"
                                android:text="500"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:fontFamily="@font/opensanssemibold"
                                android:textAlignment="center"
                                android:text="Individu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/opensansbold"
                                android:textAlignment="center"
                                android:text="Registered"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/opensanssemibold"
                                android:textAlignment="center"
                                android:text="300"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:fontFamily="@font/opensanssemibold"
                                android:textAlignment="center"
                                android:text="Individu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/opensansbold"
                                android:textAlignment="center"
                                android:text="New"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/relativeatas"
                android:id="@+id/linearchart"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/relativeatas"
                android:layout_marginTop="10dp">

            </com.github.mikephil.charting.charts.PieChart>

                <include layout="@layout/activity_chart"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="200dp">
                </include>

        </LinearLayout>

            <TextView
                android:fontFamily="@font/opensanssemibold"
                android:layout_marginTop="10dp"
                android:id="@+id/IndikatorIKS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearchart"
                android:layout_marginStart="10dp"
                android:text="Indikator IKS"
                android:textColor="#ff000000">

            </TextView>

            <LinearLayout
                android:id="@+id/buttonindikator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IndikatorIKS"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:fontFamily="@font/opensanssemibold"
                    android:clickable="true"
                    android:text="Imunisasi"
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonmain"
                    android:drawableTop="@drawable/imunisasi02"
                    android:paddingTop="10dp" />

                <Button
                    android:fontFamily="@font/opensanssemibold"
                    android:clickable="true"
                    android:text="JKN"
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonmain1"
                    android:drawableTop="@drawable/jkn11"
                    android:paddingTop="10dp" />

                <Button
                    android:fontFamily="@font/opensanssemibold"
                    android:clickable="true"
                    android:text="Bersalin"
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonmain2"
                    android:drawableTop="@drawable/bersalin03"
                    android:paddingTop="10dp" />

                <Button
                    android:fontFamily="@font/opensanssemibold"
                    android:clickable="true"
                    android:text="TBC"
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonmain4"
                    android:drawableTop="@drawable/tbc07"
                    android:paddingTop="10dp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>